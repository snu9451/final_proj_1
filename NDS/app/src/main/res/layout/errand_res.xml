<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    android:layout_marginBottom="0.6dp"
    android:orientation="horizontal">

    <CheckBox
        android:layout_width="15dp"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/errandStatusTextView"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:text="구분"
        android:gravity="center"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/errandRequestDateTextView"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="날짜"
        android:textAlignment="center"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/errandContentTextView"
        android:layout_width="60dp"
        android:layout_margin="5dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:text="내용"
        android:textAlignment="center"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/errandTotalPriceTextView"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:text="가격"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/memNicknameTextView"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:text="닉네임"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="18dp" />

</TableRow>